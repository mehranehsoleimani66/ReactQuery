{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,

    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx", // Use "react" for React versions below 17
    "lib": ["dom", "esnext"], // Includes DOM types
    "types": ["react", "react-dom"], // Ensures React types are included

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
